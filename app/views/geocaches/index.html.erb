<table class="table table-striped">
<thead>
<th><%= t('.name')%></th>
<th><%= t('.coordinates')%></th>
<th><%= t('.details'%></th>
<th></th>
<th></th>
</thead>
<tbody>
<% @geocaches.each do |cache| %>
<tr>
<td><%= cache.name %></td>
<td><%= cache.coordinates %></td>
<td><%= link_to t('.details'), geocache_path(cache.id) %></td>
<td><%= link_to t('.edit'), edit_geocache_path(cache.id) %></td>
<td><%= link_to t('.delete'), geocache_path(cache.id), method: :delete, data: {confirm: t('.are_you_sure') }  %></td>
</tr>
<% end %>
</tbody>
</table>


<%= link_to t('.add_a_new_geocache'), new_geocache_path, class: "btn btn-default" %>

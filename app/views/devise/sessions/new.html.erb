<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
  <div class="input-group">
  <%= f.label :email, t('.email'), class: "input-group-addon" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", required: "required" %>
  </div>
  </div>

  
    <div class="form-group">
  <div class="input-group"><%= f.label :password, t('.password') class: "input-group-addon" %>

    <%= f.password_field :password, autocomplete: "off", class: "form-control", required: "required" %>
    </div>
    </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
  <div class="input-group">
    <%= f.check_box :remember_me %> <%= f.label :remember_me, t('.remember_me') %></div>
    </div>
  <% end -%>

  <div><%= f.submit t('.sign_in'), class: "btn btn-default", data: {disable_with: t('.signing_in')} %> %></div>
<% end %>
<hr>
<%= render "devise/shared/links" %>

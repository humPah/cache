<h2><%= t('.sign_up')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
<div class="input-group">
  <%= f.label :email, t('.email'), class: "input-group-addon" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", required: "required" %>
  </div>
  </div>


<div class="form-group">
<div class="input-group">
  <%= f.label :password, t('.password'), class: "input-group-addon" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", required: "required" %></div>
    </div>


<div class="form-group">
<div class="input-group">

<%= f.label :password_confirmation, t('.password_confirmation'), class: "input-group-addon" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: "required" %></div>
    </div>

  <div><%= f.submit t('.sign_up'), class: "btn btn-default", data: {disable_with: t('.signing_up')} %> %></div>
<% end %>
<hr>
<%= render "devise/shared/links" %>
